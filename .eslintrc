{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended",
        "plugin:cypress/recommended"
    ],
    "plugins": ["jest", "cypress"],
    "env": {
        "es6": true,
        "browser": true,
        "amd": true,
        "node": true,
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 10,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "rules": {
        "indent": [0, "tab"],
        "quotes": ["error", "double"],
        "no-undef": "error",
        "react/react-in-jsx-scope": false,
        "react/prop-types": false,
    }
}